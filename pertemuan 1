#include <iostream>
using namespace std;

int main() {
    const float pi = 3.14;
    float r, volume, luas;

    // Input jari-jari
    cout << "Masukkan jari-jari bola: ";
    cin >> r;

    // Menghitung volume
    volume = (4.0/3.0) * pi * r * r * r;

    // Menghitung luas permukaan
    luas = 4 * pi * r * r;

    // Menampilkan hasil
    cout << "Volume bola: " << volume << endl;
    cout << "Luas permukaan bola: " << luas << endl;

    return 0;
}
