#include <iostream>
using namespace std;

int main() {
    int kode;
    string hari;

    // Input kode
    cout << "Masukkan kode (1-7): ";
    cin >> kode;

    // Menentukan hari berdasarkan kode
    switch(kode) {
        case 1:
            hari = "Senin";
            break;
        case 2:
            hari = "Selasa";
            break;
        case 3:
            hari = "Rabu";
            break;
        case 4:
            hari = "Kamis";
            break;
        case 5:
            hari = "Jumat";
            break;
        case 6:
            hari = "Sabtu";
            break;
        case 7:
            hari = "Minggu";
            break;
        default:
            hari = "Kode tidak valid";
            break;
    }

    // Menampilkan hasil
    cout << "Hari: " << hari << endl;

    return 0;
}
